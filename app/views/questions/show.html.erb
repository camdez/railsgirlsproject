<p id="notice"><%= notice %></p>

<p>
  <b>Text:</b>
  <%= @question.text %>
</p>

<ol>
  <% @question.choices.each do |choice| %>
    <li><%= link_to choice.text, vote_choice_path(:id => choice.id) %> - <%= ":) " * choice.count %></li>
  <% end %>
</ol>


<%= link_to 'Add Choice', new_choice_path(:question_id => @question.id) %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
